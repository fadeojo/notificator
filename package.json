{
    "name": "notificator",
    "version": "0.0.1",
    "description": "Notificator Service",
    "author": "Olufemi Adeojo",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "seed": "ts-node src/index.ts",
        "start:dev": "nodemon",
        "start:debug": "nodemon --config nodemon-debug.json",
        "prestart:prod": "rimraf dist && tsc",
        "start:prod": "node dist/main.js",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./src/test/jest-e2e.json",
        "migrate:dev": "NODE_ENV=development ts-node ./src/migration/migrationScript.ts",
        "migrate:prod": "NODE_ENV=production ts-node ./src/migration/migrationScript.ts",
        "migrate:test": "NODE_ENV=test ts-node ./src/migration/migrationScript.ts"
    },
    "dependencies": {
        "@nestjs/common": "^5.4.0",
        "@nestjs/core": "^5.4.0",
        "@nestjs/microservices": "^5.5.0",
        "@nestjs/typeorm": "^5.2.2",
        "class-transformer": "^0.2.0",
        "class-validator": "^0.9.1",
        "express-jwt": "^5.3.1",
        "express-jwt-authz": "^1.0.0",
        "jwks-rsa": "^1.3.0",
        "pg": "^7.3.0",
        "reflect-metadata": "^0.1.10",
        "rimraf": "^2.6.2",
        "rxjs": "^6.2.2",
        "typeorm": "0.2.11",
        "typescript": "^3.0.1"
    },
    "devDependencies": {
        "@nestjs/testing": "^5.1.0",
        "@types/express": "^4.16.0",
        "@types/jest": "^23.3.1",
        "@types/node": "^8.0.29",
        "@types/supertest": "^2.0.5",
        "jest": "^23.5.0",
        "nodemon": "^1.18.3",
        "prettier": "^1.14.2",
        "supertest": "^3.1.0",
        "ts-jest": "^23.1.3",
        "ts-loader": "^4.4.2",
        "ts-node": "3.3.0",
        "tsconfig-paths": "^3.5.0",
        "tslint": "5.11.0",
        "tslint-config-prettier": "^1.17.0",
        "typescript": "2.5.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
